{
    "autoload": {
        "psr-4": {
            "Alura\\Leilao\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "run-test":[
            "clear && vendor/bin/phpunit tests --colors --testdox"
        ],
        "run-test-rand":[
            "clear && vendor/bin/phpunit --testdox --colors --order-by=random"
        ],
        "run-test-unit":[
            "clear && vendor/bin/phpunit --testsuite='unit' --testdox --colors"
        ],
        "run-test-feat":[
            "clear && vendor/bin/phpunit --testsuite='feature' --testdox --colors"
        ],
        "run-test-c-html":[
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html='./.tmp/' --colors"
        ],
        "run-test-c-xml":[
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-clover='./.tmp/coverage.xml' --colors"
        ],
        "run-test-filter":[
            "clear && vendor/bin/phpunit --testdox --colors --filter"
        ]
    }
}
